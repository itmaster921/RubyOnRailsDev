  <div class="col-md-12">
    <div class="form-group">
      <label><%= t('.auth_level') %></label>
      <br>
      <%= f.select :level, Admin.levels.keys.reject { |level| level == 'god' }.map! { |level| [t("enumerize.admin.levels.#{level}"), level]}, {}, { class: 'form-control', style: 'width:100%', autofocus: true } %>
