<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2> <%= t('.title') %> </h2>
        <ol class="breadcrumb">
            <li>
                <a href="#"><%= t('.header', name: @company.company_legal_name) %></a>
            </li>
            <li class="active">
                <strong><%= t('.title') %></strong>
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="tabs-container">
        <ul class="nav nav-tabs">
          <li class="active"><a data-toggle="tab" href="#tab-1"><%= t('.transfers_title') %></a></li>
          <li><a data-toggle="tab" href="#tab-2"><%= t('.invoices_report') %></a></li>
        </ul>
        <div class="tab-content">
          <div id="tab-1" class="tab-pane active">
            <div class="panel-body">
              <div class="row">
                <div class="col-lg-12">
                  <div class="ibox float-e-margins">
                    <div class="ibox-content">
                      <h2><%= t('.download_title') %></h2>
                      <%= form_tag company_create_report_path(@company) do %>
                        <div class="row">
                        <div class="col-md-4">
                          <h3><%= t('.from') %>:</h3>
                            <div class="input-group date" data-provide="datepicker">
                              <input type="text" class="form-control" id="searchDate" name="report[start_date]" class="datepicker" data-date-format="dd/mm/yyyy" value="<%= Time.now.strftime("%d/%m/%Y") %>">
                              <div class="input-group-addon">
                                <span class="fa fa-calendar"></span>
                              </div>
                            </div>
                          </div>
                          <div class="col-md-4">
                            <h3><%= t('.to') %>:</h3>
                            <div class="input-group date" data-provide="datepicker">
                              <input type="text" class="form-control" id="searchDate" name="report[end_date]" class="datepicker" data-date-format="dd/mm/yyyy" value="<%= Time.now.strftime("%d/%m/%Y") %>">
                              <div class="input-group-addon">
                                <span class="fa fa-calendar"></span>
                              </div>
                            </div>
                          </div>
                        </div>
                        <div class="row">
                          <div class="col-md-4">
                            <br>
                            <%= submit_tag t('.download_button'), class:"btn" %>
                          </div>
                        </div>
                      <% end %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <div id="tab-2" class="tab-pane">
            <div class="panel-body">
              <div class="row">
                <div class="col-lg-12">
                  <div class="ibox float-e-margins">
                    <div class="ibox-content">
                      <%= form_tag create_report_company_invoices_path(@company) do %>
                        <div class="row">
                          <div class="col-md-4">
                          <h3><%= t('.from') %>:</h3>
                            <div class="input-group date" data-provide="datepicker">
                              <input type="text" class="form-control" name="report[from]" class="datepicker" data-date-format="dd/mm/yyyy" value="<%= Time.now.strftime("%d/%m/%Y") %>">
                              <div class="input-group-addon">
                                <span class="fa fa-calendar"></span>
                              </div>
                            </div>
                          </div>
                          <div class="col-md-4">
                          <h3><%= t('.to') %>:</h3>
                            <div class="input-group date" data-provide="datepicker">
                              <input type="text" class="form-control" name="report[to]" class="datepicker" data-date-format="dd/mm/yyyy" value="<%= Time.now.strftime("%d/%m/%Y") %>">
                              <div class="input-group-addon">
                                <span class="fa fa-calendar"></span>
                              </div>
                            </div>
                          </div>
                        </div>
                        <div class="row">
                          <div class="col-md-4">
                            <br>
                            <%= button_tag type: 'submit', class:"btn" do %>
                              <i class='fa fa-file-excel-o m-r-xs'></i> <%= t('.download_button') %>
                            <% end %>
                          </div>
                        </div>
                      <% end %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
$(document).ready(function() {
    $('.footable').footable();
});
</script>
