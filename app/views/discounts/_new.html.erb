<div class="modal fade" id="add-discount" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h3>
          <%= t('.header')%>
        </h3>
      </div>
      <div class="modal-body">
        <%= form_for [venue, venue.discounts.new], remote: true, authenticity_token: true  do |d| %>
          <%= render partial: "discounts/form", locals: {discount: d} %>
        </div>
      <div class="modal-footer">
        <div class="actions text-center">
          <button class='btn btn-primary ladda-button' data-style='expand-right' type='submit'>
            <%= t('.submit_button')%>
          </button>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>
