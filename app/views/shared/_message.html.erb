<% unless flash.empty? %>
<script type="text/javascript">
$(document).ready(function() {
<% flash.each do |f| %>
      <% type = f[0].to_s.gsub('alert','error').gsub('notice','info') %>
      <% if !type.include?("mixpanel") %>
      toastr['<%= type %>']('<%= f[1] %>')
      <% end %>
    <% end %>
});
</script>
<% end %>
