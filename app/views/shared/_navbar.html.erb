<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Amper</title>

    <!-- Main css styles -->
    <%= stylesheet_link_tag    'pages', media: 'all', 'data-turbolinks-track' => true %>

    <!-- Main javascript files -->
    <%= javascript_include_tag 'pages', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
    <%= favicon_link_tag 'favicon.ico' %>



</head>
<body>

<div class="nav-container">
  <nav>
    <div class="nav-bar">
      <div class="module left">
        <ul class="menu">
          <li><%= link_to image_tag("http://ampersports.com/bookingimg/amperlogoblack.png", :height => "30"), "/" %> </li>
          <li class="divider">&nbsp;</li>
          <li class=""> <a href="#"> <%= image_tag 'gps.png', size: "20" %> Helsinki</a> </li>
          <li class="divider">&nbsp;</li>
          <li class="">
            <a href="#"><%= image_tag 'tennis.png', size: "20" %>&nbsp;&nbsp; Tennis</a>
          </li>
        </ul>
      </div>
      <div class="module-group right">
        <div class="module left">
          <ul class="menu">
          <% if (!user_signed_in?) %>
            <li> <%= link_to t("main_navbar.sign_up"), new_user_registration_path, :class => "btn btn-sm btn-rounded" %> </li>
            <li> <%= link_to t("main_navbar.sign_in"), new_user_session_path %></li>
          <% else %>
            <li><%= link_to current_user.first_name, user_path(current_user.id), class: "btn btn-sm btn-rounded" %></li>
            <li><%= link_to t("main_navbar.logout"), destroy_user_session_path, method: :delete  %></li>
          <% end %>
          <li>
            <a href="#"><%= t "main_navbar.help" %></a>
          </li>
          </ul>
        </div>
      </div>

    </div>
  </nav>
</div>
<!-- Main view  -->
<%= yield %>




</body>
</html>

